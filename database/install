echo "Installing empty database (level zero)"
cd ./rollpacks/000000000000
source ./conf
source ./checkcfg
source ./passwords

echo "${ROOT_PASS}" | sudo -Su ${ORACLE_OWNER} "./install"
echo "${ROOT_PASS}" | sudo -S sh -c "./root"

